<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task), class: "text-decoration-none" %>
      <%= link_to ("<i class='fa-regular fa-trash-can'></i>").html_safe, task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"}%>
    </li>
  <% end %>
</ul>

<%= link_to "+ Add a new task", new_task_path %>
